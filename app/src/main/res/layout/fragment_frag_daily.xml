<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".frag_daily">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/two_ago"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/c_d_layout"
                android:gravity="center"
                android:text="2일전"
                android:textColor="#000000"
                android:textSize="24sp" />

            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/daily_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:progress_stroke_width="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/one_mon"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/c_d_layout"
                android:gravity="center"
                android:text="어제"
                android:textColor="#000000"
                android:textSize="24sp" />

            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/daily_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:progress_stroke_width="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/to_mon"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/c_d_layout"
                android:gravity="center"
                android:text="오늘"
                android:textColor="#000000"
                android:textSize="24sp" />

            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/daily_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:progress_stroke_width="10dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>